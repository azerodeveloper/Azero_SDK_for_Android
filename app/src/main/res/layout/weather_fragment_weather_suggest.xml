<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.weather.fragment.WeatherSuggestFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:visibility="gone"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/weather_air_bj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/weather_air_layout_margin_right"
        android:layout_marginLeft="@dimen/weather_air_layout_margin_left"
        android:layout_marginTop="@dimen/weather_suggest_layout_margin_top2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/car_info_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/weather_cloth"/>
            <TextView
                android:id="@+id/car_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weather_suggest_text_size2"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/umbrella_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/weather_san"/>
            <TextView
                android:id="@+id/umbrella_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weather_suggest_text_size2"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/cloth_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/weather_cloth"/>
            <TextView
                android:id="@+id/cloth_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weather_suggest_text_size2"
                android:text=""/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>