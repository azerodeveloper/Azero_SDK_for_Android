<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When not playing -->
    <item android:state_pressed="true" android:state_checked="false"
        android:drawable="@drawable/ic_control_play_focus" />
    <item android:state_focused="true" android:state_checked="false"
        android:drawable="@drawable/ic_control_play_focus" />
    <item android:state_checked="false"
        android:drawable="@drawable/ic_control_play_default" />
    <!-- When playing -->
    <item android:state_pressed="true" android:state_checked="true"
        android:drawable="@drawable/ic_control_pause_focus" />
    <item android:state_focused="true" android:state_checked="true"
        android:drawable="@drawable/ic_control_pause_focus" />
    <item android:state_checked="true"
        android:drawable="@drawable/ic_control_pause_default" />
</selector>